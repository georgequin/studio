/**
 * @file Firestore Security Rules
 * @description This ruleset allows all users (authenticated or not) to perform any action
 *              on all collections and documents. This configuration is completely open
 *              and intended for development, testing, or public demo environments only.
 *
 * ⚠️ WARNING:
 * These rules disable all Firestore security. Any user can read, write, update,
 * or delete any document in your database. Never use this in production.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all read and write operations on all documents
    match /{document=**} {
      allow read, write: if true;
    }
  }
}